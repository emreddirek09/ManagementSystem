@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header align-items-center d-flex">
                    <h4 class="card-title mb-0 flex-grow-1">Rol Yönetim Tanımlamaları </h4>
                </div><!-- end card header -->
                <div class="card-body">
                    <div class="live-preview">
                        <div>
                            <div class="row g-3">

                                <div class="col-lg-6    ">
                                    <div class="input-group">

                                        <label class="form-label">Rol Tanımlama Adı<span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="RoleName" placeholder="Rol adı giriniz" required="">
                                        <div class="invalid-feedback">
                                            Rol adını giriniz
                                        </div>
                                        <button class="btn btn-outline-success" id="RolKaydet" type="submit">Rol Kaydet</button>

                                    </div>
                                </div>
                                <div class="col-lg-6">

                                    <table class="table table-nowrap">
                                        <thead>
                                            <tr>
                                                <th scope="col">ID</th>
                                                <th scope="col">Role</th> 
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <th scope="row"><a href="#" class="fw-semibold">#1</a></th>
                                                <td>Admin</td> 
                                            </tr>
                                            <tr>
                                                <th scope="row"><a href="#" class="fw-semibold">#2</a></th>
                                                <td>User</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>


<script>
    $(document).ready(function () {
        $("#RolKaydet").click(function (event) {
            event.preventDefault();
            var formData = {
                RoleName: $("#RoleName").val()
            };
            $.ajax({
                url: '/Admin/AddRole',
                type: 'post',
                contentType: 'application/json',
                data: JSON.stringify(formData),
                success: function (response) {
                    if (response.success) { 
                        Swal.fire({
                            icon: 'success',
                            title: 'Başarıyla Kaydedildi!',
                            text: response.message,
                            confirmButtonText: 'Tamam'
                        }).then(function() { 
                            window.location.href = '/Admin/AddRole';
                        });
                    } else { 
                        Swal.fire({
                            icon: 'error',
                            title: 'Kayıt Başarısız!',
                            text: response.message,
                            confirmButtonText: 'Tamam'
                        }).then(function() { 
                            window.location.href = '/Admin/AddRole';
                        });
                    }
                },
                error: function () { 
                    Swal.fire({
                        icon: 'error',
                        title: 'Bir Hata Oluştu',
                        text: 'Bir hata oluştu. Lütfen tekrar deneyin.',
                        confirmButtonText: 'Tamam'
                    }).then(function() { 
                        window.location.href = '/Admin/AddRole';
                    });
                }
            });
        });
    });
</script>

